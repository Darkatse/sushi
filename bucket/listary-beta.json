{
    "version": "6.0.5.16",
    "description": "A revolutionary search utility (beta).",
    "homepage": "https://www.listary.com/beta",
    "license": "Freeware",
    "url": "https://www.listary.com/download/beta/listary6/ListaryInstaller.exe",
    "hash": "5baf39cd63e1d07784f8614fe0ec79fbc1f5ba2f4f8a91d0f2b55b24d493a250",
    "innosetup": true,
    "shortcuts": [["Listary.exe", "Listary"]],
    "installer": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to install $app.\"",
            "    exit 1",
            "}",
            "New-Service -Name ListaryServiceV2 -BinaryPathName \"$dir\\Listary.Service.exe\" -StartupType AutomaticDelayedStart",
            "Start-Service -Name ListaryServiceV2"
        ]
    },
    "uninstaller": {
        "script": [
            "Stop-Service -Name ListaryServiceV2",
            "Remove-Service -Name ListaryServiceV2",
            "Stop-Process -Name Listary",
            "Add-Type -AssemblyName Microsoft.VisualBasic",
            "[Microsoft.VisualBasic.FileIO.FileSystem]::DeleteDirectory(\"$env:appdata\\Listary\",'OnlyErrorDialogs','SendToRecycleBin')"
        ]
    }
}
