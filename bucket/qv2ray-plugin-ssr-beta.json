            "hash": "11cd01dacce730a2f06d5e072123db27d7b132c5b0252a391910c3e2428d3eb4"
        }
    },
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'ssr.dll' '*.dll'"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\ssr.dll\" -Force"
    },
    "checkver": {
        "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases",
        "regex": "/tree/v([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases/download/v$version/QvSSRPlugin.v$version.Windows-x64.dll"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases/download/v$version/QvSSRPlugin.v$version.Windows-x86.dll"
            }
        },
        "hash": {
            "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases/download/v$version/sha256.list"
        }
    }
}
