  "version": "2.0.0-pre2",
  "description": "Command plugin for Qv2ray (beta)",
  "homepage": "https://github.com/Qv2ray/QvPlugin-Command",
  "license": "GPL-3.0-or-later",
  "architecture": {
    "64bit": {
      "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v2.0.0-pre2/QvCommandPlugin.v2.0.0-pre2.Windows-x64.dll",
      "hash": "cf3dc349d9142ac08adec10bcea7b8b5fd0e5134d8ea4298a09167eda437b864"
    },
    "32bit": {
      "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v2.0.0-pre2/QvCommandPlugin.v2.0.0-pre2.Windows-x86.dll",
      "hash": "7610871cb490da363e175f9d4f54dff03fc38c9ede1a268a17ee645ec47634c8"
    }
  },
  "depends": "qv2ray-beta",
  "installer": {
    "script": [
        "function LinkFile([String] $file, [String] $source = $file) {",
        "    Write-Host \"Creating hardlink for $file\"",
        "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
        "}",
        "LinkFile 'command.dll' '*.dll'"
    ]
  },
  "uninstaller": {
    "script": [
      "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\command.dll\" -Force"
    ]
  },
  "checkver": {
    "url": "https://github.com/Qv2ray/QvPlugin-Command/releases",
    "re": "/tree/v([\\w.-]+)"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/QvCommandPlugin.v$version.Windows-x64.dll"
      },
      "32bit": {
        "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/QvCommandPlugin.v$version.Windows-x86.dll"
      }
    },
    "hash": {
        "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/sha256.list"
    }
  },
  "notes": "-beta suffixed plugins only work with Qv2ray beta."
}
