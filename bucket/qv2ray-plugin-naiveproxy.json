{
    "version": "0.1.0-rc1",
    "description": "NaiveProxy plugin for Qv2ray",
    "homepage": "https://github.com/Qv2ray/QvPlugin-NaiveProxy",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/Qv2ray/QvPlugin-NaiveProxy/releases/download/v0.1.0-rc1/QvPlugin-NaiveProxy.v0.1.0-rc1.Windows-x64.dll",
            "hash": "ebd5f53a33f47c961d09bed62f8fdfd6043c02572346cab4408fe32cbf606f08"
        },
        "32bit": {
            "url": "https://github.com/Qv2ray/QvPlugin-NaiveProxy/releases/download/v0.1.0-rc1/QvPlugin-NaiveProxy.v0.1.0-rc1.Windows-x86.dll",
            "hash": "0c41b1116d9dec8fcc90020d0d6bc58aca4710e9d654fabad17dc21ae2283d04"
        }
    },
    "depends": [
        "qv2ray-beta",
        "naiveproxy"
    ],
    "post_install": [
        "Write-Host \"Creating hardlink for naiveproxy.dll\"",
        "New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name naiveproxy.dll -Target \"$dir\\*.dll\" | Out-Null",
        "$config = \"$(appdir qv2ray-beta $global)\\current\\config\\plugin_settings\\qvplugin_naiveproxy.conf\"",
        "if (-not (Test-Path $config)) {",
        "    @{",
        "        'kernelPath' = \"$(appdir naiveproxy $global)\\current\\naive.exe\"",
        "    } | ConvertTo-Json -Depth 20 | Out-File $config -Encoding ascii",
        "}"
    ],
    "uninstaller": {
        "script": "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\naiveproxy.dll\" -Force"
    },
    "checkver": {
        "url": "https://github.com/Qv2ray/QvPlugin-NaiveProxy/releases",
        "re": "/tree/v([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-NaiveProxy/releases/download/v$version/QvPlugin-NaiveProxy.v$version.Windows-x64.dll"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-NaiveProxy/releases/download/v$version/QvPlugin-NaiveProxy.v$version.Windows-x86.dll"
            }
        }
    },
    "notes": "NaiveProxy plugin only works with Qv2ray beta."
}
