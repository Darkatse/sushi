            "hash": "c6d2bdaeb343ad07dcdd6cb6e89f54144069edbf4892325f7ea46e154946c946"
        }
    },
    "depends": "qv2ray",
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'ssr.dll' '*.dll'"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$(appdir qv2ray $global)\\current\\config\\plugins\\ssr.dll\" -Force"
    },
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases/download/v$version/QvSSRPlugin.v$version.Windows-x64.dll"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-SSR/releases/download/v$version/QvSSRPlugin.v$version.Windows-x86.dll"
            }
        }
    }
}
